<!DOCTYPE html>
<html>
  <head>
    <title>ReactiveResult</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="container">
      <p><br></p>
      <% flash.each do |name, massage| %>
        <% alert_class = name == 'notice' ? 'info' : name%>
				<div class="flash alert alert-<%= alert_class %>">
					<%= massage %>
				</div>
			<% end %>
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
